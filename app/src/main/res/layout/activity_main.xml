<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.appportfolio.MainActivity"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"


        android:text="Anthony Mcbrayer Nanodegree apps" />
    <Button
        android:onClick="movie"
        android:id="@+id/movies"
        android:padding="10sp"
        android:layout_width="230dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:layout_below="@+id/text"
        android:textSize="16sp"
        />

    <Button
        android:onClick="hawk"
        android:layout_below="@+id/movies"
        android:padding="10sp"
        android:layout_centerInParent="true"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/hawk"
        android:text="Stock Hawk"
        android:textSize="16sp"
        />
    <Button
        android:onClick="bigger"
        android:id="@+id/bigger"
        android:padding="10sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/hawk"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="build It Bigger"
        android:textSize="16sp"/>
    <Button
        android:onClick="material"
        android:layout_below="@+id/bigger"
        android:padding="10sp"
        android:layout_centerInParent="true"
        android:id="@+id/material"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:textSize="16dp"/>
    <Button
        android:onClick="go"
        android:layout_centerInParent="true"
        android:padding="10sp"
        android:layout_below="@+id/material"
        android:id="@+id/go"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Go Ubiquitous"/>
    <Button
        android:onClick="gapstone"
        android:layout_below="@+id/go"
        android:padding="10sp"
        android:layout_centerInParent="true"
        android:id="@+id/gapstone"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Gapstone"
        android:textSize="16sp"/>
</RelativeLayout>
